{
  "settings": {
    "analysis": {
      "filter": {
        "synonym_filter": {
          "type": "synonym_graph",
          "synonyms": [
            "fan, ventilator, air-mover",
            "charger, power adapter, charging cable, power supply",
            "fridge, refrigerator",
            "freezer, deep freezer",
            "washing machine, washer"
          ]
        }
      },
      "analyzer": {
