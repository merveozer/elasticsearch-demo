            "ignore_above": 256
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "synonym_analyzer"
      },
      "brand": {
        "type": "keyword"
      },
      "category": {
        "type": "keyword"
      },
      "price": {
        "type": "double"
      },
      "currency": {
        "type": "keyword"
      },
      "stock": {
        "type": "integer"
      },
      "ean": {
        "type": "keyword"
      },
      "color": {
        "type": "keyword"
      },
      "size": {
        "type": "keyword"
      },
      "availability": {
        "type": "keyword"
      },
      "suggestions": {
        "type": "text",
